from models.training.config import get_array_job_mapping

mapping = get_array_job_mapping()

# Test first few array indices
test_indices = [1, 2, 23, 45]

for idx in test_indices:
    if idx in mapping:
        exp = mapping[idx]
        exp_name = exp['experiment_name']
        print(f'âœ… Array index {idx}: {exp_name}')
    else:
        print(f'âŒ Array index {idx} not found in mapping')

# Verify mapping covers all expected indices
expected_indices = set(range(1, 46))  # 1-45
actual_indices = set(mapping.keys())

if expected_indices == actual_indices:
    print('âœ… Array job mapping covers all expected indices (1-45)')
else:
    missing = expected_indices - actual_indices
    extra = actual_indices - expected_indices
    if missing:
        print(f'âŒ Missing indices: {sorted(missing)}')
    if extra:
        print(f'âŒ Extra indices: {sorted(extra)}')

print('âœ… Array job functionality test completed')
"

